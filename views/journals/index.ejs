
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <link rel="stylesheet" href="../assets/css/signed-in.css">
  <link rel="stylesheet" href="style.css">
  
  <a href="/journals/signed-in">&larr; Back Home</a>
 

<div>
  <h2>Past Entries:</h2>
  </div>
  
  
  
  <% journals.forEach(function(j) { %>
    
    <div class="container">
      <div class="d-flex flex-column">
        <a href="/journals/<%= j.id %>"><%= j.subject %></a>
        </div>
        </div>

        <div class="container">  
          <h3>
            <div class="d-flex flex-column">
            <small><%= j.entry %> </small>
            </div>
          </h3>
        </div>
   <% if(!j.favorite) { %>
     <form method="POST" action="/journals/<%=j.id%>/favorites?_method=PUT">
       <input type="text" value="<%= j.favorite %>" name="favorite" hidden> 
       <div class="button">
         <button type="submit" class="btn btn-primary">Add to Favorites</button>
       </div>
     </form> 

   <% } %> 
        <form method="POST" action="/journals/<%=j.id%>?_method=DELETE">
          <div class="button">
            <button type="submit" class="btn btn-primary">Delete</button>
          </div>
        </form> 
        <div class ="edit">
          <a href="/journals/edit/<%= j.id %> ">Edit</a>
        </div>
    <% }) %>
 
    <h4>

      <div class="favorite">
        <a href="/journals/favorites">Favorite Journals</a>
      </div>
    </h4>
  </div>
</body>
</html>
