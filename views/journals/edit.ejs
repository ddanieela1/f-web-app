<div class="well">
        <form method="POST" action="/journals/<%= journal.id %>/?_method=PUT">
            <div class="form-group"></div>
            <label>Suject</label>
            <input type="text" name="subject" placeholder="<%= journal.subject %>">
    </div>

    <div class="form-group">
        <label>Quote</label>
        <input type="text-area" name="quote" placeholder="<%= journal.quote%>">
    </div>

    <div class="form-group">
        <label>Entry</label>
        <input type="text-area" name="entry" placeholder="<%= journal.entry%>">
    </div>

    <input type="submit" class="btn btn-primary" />
    </form>
    </div>


    <a href="/journals">Back to journals</a>    